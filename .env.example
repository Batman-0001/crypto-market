# Example Environment Configuration
# Copy this file to .env and configure your settings

# Cryptocurrency API Configuration
VITE_CRYPTO_API_BASE_URL=https://api.binance.com/api/v3
VITE_CRYPTO_API_TIMEOUT=10000

# Optional API Authentication (for premium features)
# VITE_BINANCE_API_KEY=your_binance_api_key_here
# VITE_BINANCE_SECRET_KEY=your_binance_secret_key_here

# API Rate Limiting
VITE_API_RATE_LIMIT_REQUESTS=1200
VITE_API_RATE_LIMIT_WINDOW=60000

# Data Refresh Intervals (milliseconds)
VITE_REFRESH_INTERVAL_ORDERBOOK=5000
VITE_REFRESH_INTERVAL_TICKER=10000
VITE_REFRESH_INTERVAL_HISTORICAL=60000

# Default Settings
VITE_DEFAULT_CRYPTO_SYMBOL=BTCUSDT
VITE_DEFAULT_VIEW_TYPE=daily

# Feature Toggles
VITE_ENABLE_ORDERBOOK_DATA=true
VITE_ENABLE_WEBSOCKET_UPDATES=false
VITE_ENABLE_DEBUG_LOGGING=false

# Fallback API Endpoints
VITE_FALLBACK_API_1=https://api1.binance.com/api/v3
VITE_FALLBACK_API_2=https://api2.binance.com/api/v3
VITE_FALLBACK_API_3=https://api3.binance.com/api/v3
